pipeline {
    agent any
    environment {
        DOCKERHUB = credentials('dockerhub')
        DOCKERURL = "docker.io"
        DOCKERUSR = "jithendar"
        COMPONENT = "frontend"
    }

    // parameters {
    // choice(name: 'DKIM_Option', choices: ['Build DKIM', 'Push DKIM',], description: 'Pick Docker Option')
    // text(name: 'tag', defaultValue: '', description: 'Enter the DKIM tag number/name')
    // }

    stages {
        
        stage ('Build DKIM ${env.COMPONENT}') {
            steps {
                sh '''
                pwd
                tag=$(git tag -l | tail -n 1)
                echo $tag
                sh "docker build -t ${DOCKERURL}/${DOCKERUSR}/${COMPONENT}:$tag .
                '''
            }
            }
            }
    post {
        success {
            sh 'docker logout'
            }
        always { 
            cleanWs()
        }
     }
}
